<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">创建一个新的景点</h1>
        <div style="width: 30%; margin: 16px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                   <input class="form-control" type="text" name="name"  placeholder="名字">
                </div>
                <div class="form-group">   
                   <input class="form-control" type="text" name="image" placeholder="图片链接">
                </div>
                <div class="form-group">   
                    <input class="form-control" type="text" name="description" placeholder="描述">
                 </div>
                <div class="form-group">
                   <button class="btn btn-lg btn-primary btn-block">提交</button>
                </div>
            </form> 

            <a href="/campgrounds">返回主页</a>
    </div>
</div>
</div>
