<% include ../partials/header %>
<div class="container">
<header class = "jumbotron"> 
    <div class="container">
    <h1> 欢迎来到宁海旅游网 </h1>
    <p> 看看我们的风景  </p>
    <p>
        <a class="btn btn-primary btn-large" href="/campgrounds/new"> 添加新景点 </a>
    </p>
    </div>
</header>


 
<div class="row" style="display:flex; flex-wrap: wrap;">   
        <% campground.forEach(function(camp){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src= "<%= camp.image %>" >
                    <div class="caption">
                        <h4> <%= camp.name %> </h4>
                    </div>
                    <p> 
                        <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary"> 更多讯息 </a>
                    </p>
                </div>
            </div>
        <% }); %>
</div>
</div>
<% include ../partials/footer %>